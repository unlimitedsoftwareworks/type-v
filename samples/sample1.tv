VERSION: 001 ; 0.0.1

CONST:
    c1: i8[5] = [1, 2, 3, 4, 5]
    c2: i32[5] = [1, 2, 3, 4, 5]
    bigdata: ptr[1000]

GLOBAL:
    x: i32 = 0
    y: i32 = 0

CODE:
    mv_reg_const_8 r0, c1  ; moves the first byte of c1 into r0
    mv_reg_const_32 r1, c2 ; moves the first 4 bytes of c2 into r1
    upcast_i8_i16 r0
    upcast_i16_i32 r0
    cast_i32_u32 r0
    add_u32 r0, r0, r1 ; adds
    halt
